@{
    ViewData["Title"] = "My watch List";
}

@model List<Movie>

<div class="container">
    <h2>My Watch List</h2>

    @if (Model.Count == 0)
    {
        <div>There are no movie in your watch list!</div>
    }
    else
    {
        <div class="row">
            @foreach (Movie movie in Model)
            {
                <div class="col-md-4 col-lg-3 col-sm-6 p-2">
                    <form asp-controller="Movie">
                        <div class="card p-2" style="width: 18rem;">
                            <img src="@movie.posterImage!.url" class="card-img-top" style="height: 400px;" alt="@movie.name">
                            <div class="card-body">
                                <h6 class="card-title">@movie.name</h6>
                                <p class="card-text">@movie.releaseDate</p>
                                <button name="movieName" type="submit" value="@movie.name" asp-action="RemoveFromWatchList" class="btn btn-primary">Remove from watch list</button>
                            </div>
                        </div>
                    </form>
                </div>
            }
        </div>
    }
</div>

